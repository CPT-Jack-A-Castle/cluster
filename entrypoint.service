[Unit]
Description=Solana Entrypoint
After=network.target

[Service]
WorkingDirectory=/home/solanad
EnvironmentFile=/home/solanad/service-env.sh
Type=simple
Restart=always
RestartSec=1
User=solanad
StartLimitIntervalSec=0
LogRateLimitIntervalSec=0
ExecStart=/home/solanad/.local/share/solana/install/active_release/bin/solana-gossip \
  spy --gossip-port ${ENTRYPOINT_PORT} --gossip-host ${ENTRYPOINT_HOST}

[Install]
WantedBy=multi-user.target
